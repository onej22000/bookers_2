 <h1>User info</h1>

 <%= image_tag @user.image, size: "200x200" %>

 <p>name</p>
 <p><%= @user.name %></p>

 <p>introduction</p>
 <p><%= @user.introduction %></p>

 <%= link_to "編集", edit_user_path(@user.id) %>
 <h1>New book</h1>
 <%= form_with model: @book, local:true do |f| %>

   <h4>Title</h4>
   <%= f.text_field :title %>

   <h4>Opinion</h4>
   <%= f.text_area :opinion %>

   <%= f.submit 'Create Book' %>

 <% end %>

 <h1>Books</h1>

 <table>
  <thead>
   <tr>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="2"></th>
   </tr>
  </thead>
  <tbody>
   <% @books.each do |book| %>

    <tr>
     <td><%= book.title %></td>
     <td><%= book.opinion %></td>

     <td>
      <%= link_to "Edit", edit_book_path(book.id) %>
     </td>
     <td>
      <%= link_to "Destroy", "/books/#{book.id}", method: :delete,  "data-confirm" => "本当に消しますか？" %>
     </td>
    </tr>

   <% end %>
  </tbody>
 </table>