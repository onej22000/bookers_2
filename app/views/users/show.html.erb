
<p class="notice"><%= flash[:notice] %></p>
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
     <h2>User info</h2>
     <image class="attachment user profile_image fallback">
      <%= image_tag @user.get_profile_image("63x63") %>
     </image>
     <table>
      <tbody
       <tr></tr>
       <tr>
        <th>name</th>
        <th><%= @user.name %></th>
       </tr>
       <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
       </tr>
      </tbody>
     </table>
     <div class="row">
      <a class="btn btn-outline-secondary btn-block fas fa-user-cog">
       <%= link_to edit_user_path(@user.id) do %>
        <span class="fas fa-user-cog"></span>
       <% end %>
      </a>
     </div>
     <h1>New book</h1>
     <%= form_with model: @book, local:true do |f| %>

       <h4>Title</h4>
       <%= f.text_field :title %>

       <h4>Opinion</h4>
       <%= f.text_area :body %>

       <%= f.submit 'Create Book' %>

     <% end %>
  </div>
  <div class="col-md-8 offset-md-1">
     <h2>Books</h2>

     <table>
      <thead>
       <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="2"></th>
       </tr>
      </thead>
      <tbody>
       <% @books.each do |book| %>

        <tr>
         <td>
          <%= link_to user_path(book.user) do %>
          ã€€<%= image_tag book.user.profile_image, size: "63x63" %>
          <% end %>
        </td>
         <td><%= link_to book.title, book_path(book.id) %></td>
         <td><%= book.body %></td>

        </tr>

       <% end %>
  </div>
      </tbody>
     </table>

 </div>
</div>