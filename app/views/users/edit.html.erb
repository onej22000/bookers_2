<main>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
 <div class="container">
  <div class="row">
   <div class="col-sm12 col-md-8 col-log-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <%= form_with model: @user, local:true do |f| %>
          <div class="form-group">
            <h4>Name</h4>
            <%= f.text_field :name %>
          <div class="form-group">
            <h4>Image</h4>
            <%= f.file_field :profile_image, accept: "image/*" %>
          <div class="form-group">
            <label for="user_introduction">Introduction</label
            <textarea class="form-control introduction">
             <%= f.text_area :introduction %>
            </textarea>
          <div class="form-group">
            <%= f.submit 'Update User' %>
          </div>
        <% end %>

   </div>
  </div>
 </div>
</main>