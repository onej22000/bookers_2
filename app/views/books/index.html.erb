<h1>New book</h1>
  <%= form_with model: @book, local:true do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :opinion %>
    <%= f.submit 'Create Book' %>
  <% end %>

<h1>Books</h1>

<%= @books.each do |book| %>

  <p>Title</p>
  <span><% book.title %></span>
  <p>Opinion</p>
  <span><% book.opinion %></span>
  <span>
   <%= link_to book.title, book_path(book.id) %>
  </span>

<% end %>


