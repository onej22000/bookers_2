<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="notice"><%= flash[:notice] %></p>
      <h2>User info</h2>
      <image class="attachment user profile_image fallback">
        <%= image_tag @user.profile_image, size: "63x63" %>
      </image>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <% if @user == current_user %>
          <%= link_to edit_user_path(current_user) do %>
            <span class="fas fa-user-cog"></span>
          <% end %>
        <% else %>
          <%= link_to user_path(current_user) do %>
            <span class="fas fa-user-cog"></span>
          <% end %>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @newbook, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>

        <h4>Opinion</h4>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book' %>

      <% end %>
    </div>
  </div>
  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">

      <tbody>
        <th></th>
        <tr>
          <td>
            <%= link_to user_path(@book.user) do %>
              <%= image_tag @user.profile_image, size: "63x63" %>
            <% end %>
          </td>
          <td><%= link_to @user.name, user_path(@book.user) %></td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @user == current_user %>
          <td>
            <%= link_to "Edit", edit_book_path(@book.id) %>
          </td>
          <td>
            <%= link_to "Destroy", "/books/#{@book.id}", method: :delete,  "data-confirm" => "本当に消しますか？" %>
          </td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>
