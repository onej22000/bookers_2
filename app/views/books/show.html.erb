<h1>User info</h1>
<%= form_with model: @user, url:'/users', local:true do |f| %>
  <h4>Image</h4>
  <%= f.file_field :image, accept: "image/*" %>

  <h4>Name</h4>
  <%= f.text_field :name %>

  <h4>Introduction</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update User' %>

<% end %>

<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :opinion %>

  <%= f.submit 'Create Book' %>

<% end %>


<h1>Books detail</h1>

<table>
 <thead>
  <tr>
   <th>Title</th>
   <th>Opinion</th>
   <th colspan="2"></th>
  </tr>
 </thead>
 <tbody>
  <% @books.each do |book| %>

   <tr>
    <td><%= book.title %></td>
    <td><%= book.opinion %></td>

    <td>
     <%= link_to "Edit", edit_book_path(book.id) %>
    </td>
    <td>
     <%= link_to "Destroy", "/books/#{book.id}", method: :delete,  "data-confirm" => "本当に消しますか？" %>
    </td>
   </tr>

  <% end %>
 </tbody>
</table>