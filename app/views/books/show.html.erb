
<<p class="notice"><%= flash[:notice] %></p>
<h1>User info</h1>
<%= form_with model: @user, local:true do |f| %>
  <h4>Image</h4>
  <%= f.file_field :image, accept: "image/*" %>

  <h4>Name</h4>
  <%= f.text_field :name %>

  <h4>Introduction</h4>
  <%= f.text_area :introduction %>

  <%= f.submit 'Update User' %>

<% end %>

<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>


<h1>Book detail</h1>

<td><%= image_tag @user.profile_image, size: "63x63" %></td>
<td><%= @user.name %></td>
<td><%= @book.title %></td>
<td><%= @book.body %></td>

<td>
 <a class="btn btn-sm btn-success"><%= link_to "Edit", edit_book_path(@book.id) %></a>
</td>
<td>
 <a class="btn btn-sm btn-success"><%= link_to "Destroy", "/books/#{@book.id}", method: :delete,  "data-confirm" => "本当に消しますか？" %></a>
</td>