<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/1bfaa6e1d2.js" crossorigin="anonymous"></script>

  </head>
    <h1>Bookers</h1>
    <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to user_path(current_user.id) do %>
               <i class="fas fa-home">Home</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to user_path(current_user.id) do %>
               <i class="fas fa-users">Users</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to books_path(current_user.id) do %>
                <i class="fas fa-book-open">Books</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :get do %>
                <i class="fas fa-sign-out-alt">Log out</i>
              <% end %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to root_path do %>
               <i class="fas fa-home">Home</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to homes_about_path do %>
               <i class="fas fa-link">About</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path do %>
               <i class="fas fa-user-plus">Sign up</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_session_path do %>
               <i class="fas fa-sign-in-alt">Log in</i>
              <% end %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
    <footer class="bg-dark text-white pt-5 pb-4">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-4">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>

</html>
