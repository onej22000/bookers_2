<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/1bfaa6e1d2.js" crossorigin="anonymous"></script>

  </head>

    <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :get do %>
                <span>Bookers</span>
              <% end %>
            </li>
            <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to user_path(current_user.id) do %>
               <span class="fas fa-home"></span>Home
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to users_path do %>
               <span class="fas fa-users"></span>Users
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to books_path do %>
                <span class="fas fa-book-open"></span>Books
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :get do %>
                <span class="fas fa-sign-out-alt"></span>Log out
              <% end %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to root_path do %>
               <span class="fas fa-home"></span>Home
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to home_about_path do %>
               <span class="fas fa-link"></span>About
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path do %>
               <span class="fas fa-user-plus"></span>Sign up
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_session_path do %>
               <span class="fas fa-sign-in-alt"></span>Log in
              <% end %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
      <div class="container-mt5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>

</html>
